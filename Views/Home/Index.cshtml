@model User

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="col-auto">
        <h1 class="display-4">Register</h1>
        <form asp-controller="Home" asp-action="Register" method="POST" class="row mt-5 container">
            <div class="col-3 me-4">
                <div class="row">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="FirstName" class="row form-label fs-5">First Name</label>
                </div>
                <div class="row">
                    <input asp-for="FirstName" class="form-control ">  
                </div>
                <div class="row">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="LastName" class="row form-label fs-5">Last Name</label>
                </div>
                <div class="row mb-4">
                    <input asp-for="LastName" class="form-control ">  
                </div>
                <div class="row">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="Email" class="row form-label fs-5"></label>
                </div>
                <div class="row mb-4">
                    <input asp-for="Email" class="form-control ">  
                </div>
                <div class="row">
                    <span asp-validation-for="Password" class="text-danger row"></span>
                </div>
                <div class="row">
                    <label asp-for="Password" class="row form-label fs-5 row"></label>
                </div>
                <div class="row mb-4">
                    <input asp-for="Password" class="form-control ">  
                </div>
                <div class="row">
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>
                <div class="row">
                    <label asp-for="Confirm" class="row form-label fs-5"></label>
                </div>
                <div class="row mb-4">
                    <input asp-for="Confirm" class="form-control ">  
                </div>
                <div class="row mb-4">
                    <button class="btn border border-dark col-auto">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-auto">
        <a asp-controller="Home" asp-action="LoginPage" class="row">Already have an account?</a>
    </div>
</div>
