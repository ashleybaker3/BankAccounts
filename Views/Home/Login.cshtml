@model LoginUser

@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Login</h1>
<form asp-controller="Home" asp-action="Login" method="POST" class="row mt-5">
    <div class="col-3 me-4">
        <div class="row mb-4">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="LoginEmail" class="row form-label fs-5"></label>
        </div>
        <div class="row mb-4">
            <input asp-for="LoginEmail" class="form-control ">  
        </div>
        <div class="row">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </div>
        <div class="row">
            <label asp-for="LoginPassword" class="row form-label fs-5"></label>
        </div>
        <div class="row mb-4">
            <input asp-for="LoginPassword" class="form-control ">  
        </div>
        <div class="row mb-4">
            <button class="btn border border-dark col-auto">Log In</button>
        </div>
    </div>
</form>
<a asp-controller="Home" asp-action="Index">Need to Register?</a>